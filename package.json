{
  "name": "KASPAR",
  "version": "1.0.0",
  "description": "KASPAR - Take Control.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.kaspar.app",
    "productName": "Kaspar",
    "win": {
      "target": "nsis",
      "icon": "files/applogo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "scripts/",
        "to": "scripts/",
        "filter": [
          "**/*.exe"
        ]
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "assets/**",
      "files/**"
    ]
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0"
  }
}